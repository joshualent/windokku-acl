#!/usr/bin/env bash
set -eo pipefail; [[ $DOKKU_TRACE ]] && set -x

# post-create trigger: executed after `dokku apps:create <app>`
APP="$1"
[[ -z "$APP" ]] && exit 0

#? NOTE: only the last fallback method for adding user to acl

# Resolve user from capture file or fallback to SSH_NAME
RUN_BASE="/var/run/dokku-acl-auto"
CREATOR_FILE="$RUN_BASE/apps/$APP"
user=""
if [[ -s "$CREATOR_FILE" ]]; then
  user="$(cat "$CREATOR_FILE" || true)"
  rm -f "$CREATOR_FILE" || true
fi
[[ -z "$user" && -n "$SSH_NAME" ]] && user="$SSH_NAME"

if [[ -z "$user" ]]; then
  echo "WARN: no user resolved for app '$APP'; skipped acl:add" >&2
  exit 0
fi

# Try to run as on-host admin: scrub ssh env and set DOKKU_ON_HOST
if env -u SSH_NAME -u SSH_USER -u DOKKU_SSH_USER DOKKU_ON_HOST=1 dokku acl:add "$APP" "$user" 2>/dev/null; then
  exit 0
fi

# Fallback: call the subcommand directly if found (disabled for testing)
bases=("$PLUGIN_ENABLED_PATH" "$PLUGIN_AVAILABLE_PATH" "/var/lib/dokku/plugins/enabled" "/var/lib/dokku/plugins/available")
names=("acl" "dokku-acl")
for base in "${bases[@]}"; do
  for name in "${names[@]}"; do
    candidate="${base}/${name}/subcommands/add"
    if [[ -x "$candidate" ]]; then
      if env -u SSH_NAME -u SSH_USER -u DOKKU_SSH_USER DOKKU_ON_HOST=1 "$candidate" "$APP" "$user"; then
        exit 0
      fi
    fi
  done
done

# Last resort: try with an admin NAME inferred from authorized_keys (disabled for testing)
admin_name=""
if [[ -r "/home/dokku/.ssh/authorized_keys" ]]; then
  admin_name=$(grep -m1 -o 'NAME=[^ ]*' /home/dokku/.ssh/authorized_keys | head -n1 | cut -d= -f2 || true)
fi
if [[ -n "$admin_name" ]]; then
  if env SSH_NAME="$admin_name" SSH_USER="root" DOKKU_ON_HOST=1 dokku acl:add "$APP" "$user" 2>/dev/null; then
    exit 0
  fi
fi

echo "WARN: failed to add '$user' to ACL for app '$APP'" >&2
exit 0
